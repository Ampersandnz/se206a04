<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ContactDetail" >
	    
    <FrameLayout
        android:layout_width="150dp"
        android:layout_height="150dp" >
        
        <ImageView
            android:id="@+id/contactDetail_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:contentDescription="@string/hello_world" />
        
    </FrameLayout>
    	
    <TextView
	    android:id="@+id/contactDetail_firstName"
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
        android:layout_gravity="center"/>	
    	
	<TextView
	    android:id="@+id/contactDetail_lastName"
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
        android:layout_gravity="center"/>	
    	
    <TextView
	    android:id="@+id/contactDetail_mobilePhone"
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
        android:layout_gravity="center"/>	
    	
    <TextView
	    android:id="@+id/contactDetail_homePhone"
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
        android:layout_gravity="center"/>	
    	
    <TextView
	    android:id="@+id/contactDetail_workPhone"
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
        android:layout_gravity="center"/>	
	    	
    <TextView
	    android:id="@+id/contactDetail_email"
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
        android:layout_gravity="center"/>	
    	
    <TextView
	    android:id="@+id/contactDetail_address"
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
        android:layout_gravity="center"/>	
    	
    <TextView
	    android:id="@+id/contactDetail_dateOfBirth"
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
        android:layout_gravity="center"/>	
	
    <Spinner
        android:id="@+id/contactDetail_optionsSpinner"
	    android:layout_width="fill_parent"
	    android:layout_height="0px"
	    android:layout_weight="1"
        android:layout_gravity="center"
        android:entries="@array/options_menu"
        android:spinnerMode="dialog" />
	
</LinearLayout>
